{
  "name": "zen-flow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss build src/styles.css -o public/css/output.css",
    "watch:css": "yarn run build:css -- --watch",
    "dev": "yarn run build:css && vite",
    "build": "yarn run build:css && vite build",
    "release": "yarn run build:css && yarn run check && tauri build --release",
    "preview": "yarn run build:css && vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "tauri dev": "yarn run build:css && tauri dev",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.4.0",
    "eslint": "^8.45.0",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.0.0",
    "@tauri-apps/cli": "^1.4.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^18.7.10",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "3.0.0",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.0",
    "svelte-preprocess": "^5.0.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.5",
    "vite": "^4.2.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
